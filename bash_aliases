# Program aliases
alias python=python3
alias pip=pip3

# Shorthands for common commands
alias gs="git status"
alias gc="git commit"
alias ga="git add"
alias v=vim
alias py=python3
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias chx="chmod u+x"
alias ll='exa -alF'
alias la='exa -A'
alias l='exa -CF'
alias activate="source venv/bin/activate"
alias cl='clear'

# Default options for commands 
alias mv="mv -i"		# prompts before overwrite
alias mkdir="mkdir -p"	# make parent dirs as needed
alias "gl"="git log --all --graph --decorate --abbrev-commit"
alias "glo"="git log --all --graph --decorate --abbrev-commit --oneline"
alias ls='ls --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# Common misspelings
alias dc=cd
alias sl=ls


